<h3>Add Image from your Computer<h3>

<div class="container">
	<%= form_for @image, multipart: true do |f| %>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label "Tags for Image (separated by spaces)" %>
			<%= f.text_field :tag_names, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label "Image to Upload" %>
			<%= f.file_field :imagefile, class: 'form-control' %>
		</div>
		<%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
	<% end %>
</div>